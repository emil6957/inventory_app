extends layout

block content
    h1 #{title}
    
    p Manufacturer: 
        a(href=`../manufacturer/${car.manufacturer.name}`) #{car.manufacturer.name}
    p Body Type: 
        a(href=`../bodyType/${car.bodyType.type}`) #{car.bodyType.type}
    if car.amntInStock == 0
        p(style="color: red;") #[strong OUT OF STOCK]
    else
        p Left In Stock: #{car.amntInStock} 
    p Price: Â£#{car.price}
    p Production Start: #{car.productionStartYear}
    p Production End: #{car.productionEndYear}

