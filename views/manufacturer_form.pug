extends layout

block content
    h1 Add New Manufacutrer

    form(method="POST")
        label(for="name") Name:
        input(type="text", placeholder="Manufacturer Name", name="name")
        label(for="yearFounded") Year Founded:
        input(type="range" min="1900" max="2024" name="yearFounded" oninput="this.nextElementSibling.value = this.value")
        output
        button(type="submit") Submit

        if errors
            for error in errors
                p(style="color: red;") #{error.msg}
